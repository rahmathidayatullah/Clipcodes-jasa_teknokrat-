<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firebase_desain.post"
    android:background="@drawable/header">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar Pembimbing Programer"
        android:textSize="30sp"
        android:paddingTop="10dp"
        android:id="@+id/texttt"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"/>

    <ImageButton
        android:layout_below="@+id/texttt"
        android:id="@+id/imageSelect"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@color/grayColor"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_add_to_photos_white_24dp" />

    <EditText
        android:id="@+id/titleField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageSelect"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/input_outline"
        android:hint="Masukan Nama"
        android:padding="6dp"
        android:layout_marginTop="30dp"
        android:singleLine="true"
        />

    <EditText
        android:id="@+id/descField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleField"
        android:layout_marginTop="20dp"

        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:hint="Masukan Email"
        android:inputType="textMultiLine"
        android:padding="6dp" />

    <EditText
        android:id="@+id/gitField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descField"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:hint="Alamat Github"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:inputType="textMultiLine"
        android:padding="6dp" />

    <EditText
        android:id="@+id/hpField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gitField"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:hint="Nomor HP"
        android:inputType="textMultiLine"
        android:padding="6dp" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:text="DAFTAR"
        android:textColor="@android:color/white" />

</RelativeLayout>
